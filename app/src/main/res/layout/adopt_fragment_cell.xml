<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/adopt_fragment_cell_card_view"
        card_view:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@color/yellow"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adopt_fragment_cell_pet_name"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="Toto"
                    android:layout_marginLeft="16dp"
                    />

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/adopt_fragment_cell_like_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_favorite_border_black_48dp"
                    android:padding="0dp"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    />

            </RelativeLayout>
            
            <ImageView
                android:id="@+id/adopt_fragment_cell_image_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/jorge"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/adopt_fragment_cell_sex_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Macho"
                    android:textSize="12sp"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/adopt_fragment_cell_age_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adulto"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/adopt_fragment_cell_size_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grande"
                    android:textSize="12sp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/adopt_fragment_cell_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asa sul - Brasilia/DF"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>