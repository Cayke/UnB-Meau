<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrayBackground"
    tools:context="com.caykeprudente.meau.MainActivity">


    <TextView
        android:id="@+id/activity_main_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textColor="@color/yellow"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/activity_main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bem_vindo"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/activity_main_hello"
        android:padding="16dp"
        />

    <Button
        android:id="@+id/activity_main_btn_adopt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/activity_main_btn_register"
        android:background="@color/greenPool"
        android:text="Adotar"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/activity_main_btn_register"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/activity_main_btn_help"
        android:background="@color/greenPool"
        android:text="Cadastrar Pet"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/activity_main_btn_help"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/activity_main_image_view"
        android:background="@color/greenPool"
        android:text="Ajudar"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        />


    <ImageView
        android:id="@+id/activity_main_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:src="@drawable/logo"
        />
</RelativeLayout>
