<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caykeprudente.meau.Fragments.SuccessTermoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="52dp"
        android:paddingLeft="52dp"
        android:paddingRight="52dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pronto!"
            style="@style/eba"
            android:layout_marginBottom="52dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O termo já foi enviado para o seu email. Caso não tenha recebido, verifique se o seu email está cadastrado corretamente na área 'Meu Perfil', no menu principal."
            style="@style/normalText"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para entender um pouco mais sobre as leis que envolvem esse processo, acesse nossa área de legislação!"
            style="@style/normalText"
            android:gravity="center_horizontal"/>

    </LinearLayout>


</FrameLayout>
