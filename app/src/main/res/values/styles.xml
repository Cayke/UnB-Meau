<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="infoLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#f7a800</item>
        <item name="android:layout_marginTop">6pt</item>
    </style>
    <style name="infoAnimal">
        <item name="android:textColor">#3f3c3d</item>
    </style>
    <style name="animalName">
        <item name="android:textColor">#231f20</item>
        <item name="android:textSize">12pt</item>
        <item name="android:layout_marginTop">6pt</item>
        <item name="android:layout_marginBottom">6pt</item>
    </style>
    <style name="divideRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c6c5c5</item>
        <item name="android:layout_marginTop">6pt</item>
    </style>
    <style name="animalBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24pt</item>
        <item name="android:layout_marginTop">14pt</item>
        <item name="android:background">#f7a800</item>
    </style>

</resources>
