<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenActionBarColor</item>
        <item name="colorPrimaryDark">@color/darkGreenColor</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/greenButtonColor</item>
        <item name="colorControlHighlight">@color/greenButtonColor</item>
    </style>

    <!--Here will be the theme of the class that will extends NavigationLiveo-->
    <style name="adoptTheme" parent="Theme.nLiveo">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellowColor</item>
        <item name="colorPrimaryDark">@color/yellowFireColor</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="infoLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#f7a800</item>
        <item name="android:layout_marginTop">6pt</item>
    </style>
    <style name="infoAnimal">
        <item name="android:textColor">#3f3c3d</item>
    </style>
    <style name="animalName">
        <item name="android:textColor">#231f20</item>
        <item name="android:textSize">12pt</item>
        <item name="android:layout_marginTop">6pt</item>
        <item name="android:layout_marginBottom">6pt</item>
    </style>
    <style name="divideRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c6c5c5</item>
        <item name="android:layout_marginTop">6pt</item>
    </style>
    <style name="animalBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24pt</item>
        <item name="android:layout_marginTop">14pt</item>
        <item name="android:background">#f7a800</item>
    </style>

    <!-- FRAGMENTO DE CADASTRO DE ANIMAL -->
    <style name="register_sub_title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="btn_choiced_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#ffd358</item>
        <item name="android:textColor">#434343</item>
    </style>
    <style name="btn_n_choiced_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#f1f2f2</item>
        <item name="android:textColor">#434343</item>
    </style>
    
    <style name="eba">
        <item name="android:textColor">#ffd358</item>
        <item name="android:textSize">53dp</item>
        <item name="android:fontFamily">Courgette Regular</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="normalText">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>